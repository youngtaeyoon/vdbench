# file creation prior to IO generation
## multiple exports
#
# HD: linux clients
hd=default,user=root,shell=ssh,vdbench=/root/vdbench
hd=cpu01,system=cpu01
hd=cpu02,system=cpu02
hd=cpu03,system=cpu03
hd=cpu04,system=cpu04

# FSD: target directory and files
# create 1024 files of 1GB, which is 1TB per host
fsd=fsd_a_$host,anchor=/stfs/a/$host,depth=2,width=8,file=16,size=10M,openflag=directio
fsd=fsd_b_$host,anchor=/stfs/b/$host,depth=2,width=8,file=16,size=10M,openflag=directio
fsd=fsd_c_$host,anchor=/stfs/c/$host,depth=2,width=8,file=16,size=10M,openflag=directio
fsd=fsd_d_$host,anchor=/stfs/d/$host,depth=2,width=8,file=16,size=10M,openflag=directio

# create 1024 files of 10GB, which is 10TB per host
#fsd=fsd_$host,anchor=/nas/vdtest/$host,depth=2,width=8,file=16,size=1GB,openflag=directio

# file creation prior to IO generation
#fwd=fwd_prep_a_$host,host=$host,fsd=fsd_*,operation=create,fileselect=sequential,fileio=sequential,threads=16
fwd=fwd_prep_a_$host,host=$host,fsd=fsd_a_$host,operation=create,fileselect=sequential,fileio=sequential,threads=16
fwd=fwd_prep_b_$host,host=$host,fsd=fsd_b_$host,operation=create,fileselect=sequential,fileio=sequential,threads=16
fwd=fwd_prep_c_$host,host=$host,fsd=fsd_c_$host,operation=create,fileselect=sequential,fileio=sequential,threads=16
fwd=fwd_prep_d_$host,host=$host,fsd=fsd_d_$host,operation=create,fileselect=sequential,fileio=sequential,threads=16

# FWD: sequential write 1M
fwd=fwd_seq_1024w_$host,host=$host,fsd=fsd_$host,operation=write,fileselect=sequential,fileio=sequential,xfersize=1024k,threads=8

# RD: file creation
rd=rd_prep,fwd=fwd_prep_*,fwdrate=max,format=yes,interval=1
#rd=rd_prep_$host,fwd=fwd_prep_$host,fwdrate=max,format=yes,interval=1
#rd=rd_seq_1024w,fwd=fwd_seq_1024w_*,fwdrate=max,format=no,warmup=60,interval=1,elapsed=300
